{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",
    "lib": ["ES2020"],
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  }
}
